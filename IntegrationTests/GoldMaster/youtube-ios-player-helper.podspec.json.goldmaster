load('//:pod_support_buildable/extensions.bzl', 'pch_with_name_hint')
load('//:pod_support_buildable/extensions.bzl', 'acknowledged_target')
# Add a config setting release for compilation mode
# Assume that people are using `opt` for release mode
# see the bazel user manual for more information
# https://bazel.build/versions/master/docs/bazel-user-manual.html
native.config_setting(
  name = "release",
  values = {
    "compilation_mode": "opt"
  }
  )
config_setting(
  name = "iosCase",
  values = {
    "cpu": "powerpc1"
  }
  )
config_setting(
  name = "osxCase",
  values = {
    "cpu": "powerpc2"
  }
  )
objc_library(
  name = "youtube-ios-player-helper",
  enable_modules = 1,
  srcs = select(
    {
      ":osxCase": glob(
        [
          "Classes/**/*.c",
          "Classes/**/*.cpp",
          "Classes/**/*.m",
          "Classes/**/*.mm"
        ],
        exclude = [
          "Classes/ios/**/*.c",
          "Classes/ios/**/*.cpp",
          "Classes/ios/**/*.m",
          "Classes/ios/**/*.mm"
        ],
        exclude_directories = 1
        ),
      "//conditions:default": glob(
        [
          "Classes/**/*.c",
          "Classes/**/*.cpp",
          "Classes/**/*.m",
          "Classes/**/*.mm"
        ],
        exclude = [
          "Classes/osx/**/*.c",
          "Classes/osx/**/*.cpp",
          "Classes/osx/**/*.m",
          "Classes/osx/**/*.mm"
        ],
        exclude_directories = 1
        )
    }
    ),
  hdrs = select(
    {
      ":osxCase": glob(
        [
          "Classes/**/*.h",
          "pod_support/Headers/Public/**/*.h"
        ],
        exclude = [
          "Classes/ios/**/*.h"
        ],
        exclude_directories = 1
        ),
      "//conditions:default": glob(
        [
          "Classes/**/*.h",
          "pod_support/Headers/Public/**/*.h"
        ],
        exclude = [
          "Classes/osx/**/*.h"
        ],
        exclude_directories = 1
        )
    }
    ),
  pch = pch_with_name_hint(
    "youtube-ios-player-helper",
    [
      "Classes/**/*.pch"
    ]
    ),
  includes = [
    "pod_support/Headers/Public/",
    "pod_support/Headers/Public/youtube-ios-player-helper/"
  ],
  deps = [
    ":youtube_ios_player_helper_Bundle_Assets"
  ],
  copts = [

  ] + select(
    {
      "//conditions:default": [
        "-DPOD_CONFIGURATION_RELEASE=0"
      ],
      ":release": [
        "-DPOD_CONFIGURATION_RELEASE=1"
      ]
    }
    ),
  bundles = [
    ":youtube_ios_player_helper_Bundle_Assets"
  ],
  visibility = [
    "//visibility:public"
  ]
  )
acknowledged_target(
  name = "youtube_ios_player_helper_acknowledgement",
  deps = [
    ":youtube_ios_player_helper_Bundle_Assets_acknowledgement"
  ]
  )
objc_bundle(
  name = "youtube_ios_player_helper_Bundle_Assets",
  bundle_imports = glob(
    [
      "youtube-ios-player-helper/Assets.bundle/**"
    ],
    exclude_directories = 1
    )
  )
acknowledged_target(
  name = "youtube_ios_player_helper_Bundle_Assets_acknowledgement",
  deps = [

  ]
  )
