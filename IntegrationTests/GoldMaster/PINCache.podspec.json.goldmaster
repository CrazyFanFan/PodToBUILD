      "Source/**/*.pch"
    ]
    ),
  includes = [
    "bazel_support/Headers/Public/",
    "bazel_support/Headers/Public/PINCache/"
  ],
  sdk_frameworks = [
    "Foundation"
  ],
  weak_sdk_frameworks = select(
    {
      ":osxCase": [
        "AppKit"
      ],
      "//conditions:default": [
        "UIKit"
      ]
    }
    ),
  deps = [
    "@PINOperation//:PINOperation"
  ],
  copts = [

  ] + select(
    {
      "//conditions:default": [
        "-DPOD_CONFIGURATION_RELEASE=0"
      ],
      ":release": [
        "-DPOD_CONFIGURATION_RELEASE=1"
      ]
    }
    ),
  visibility = [
    "//visibility:public"
  ]
  )
objc_library(
  name = "PINCache_Arc_exception_safe",
  srcs = glob(
    [
      "Source/PINDiskCache.m"
    ],
    exclude_directories = 1
    ),
  hdrs = glob(
    [
      "bazel_support/Headers/Public/**/*.h"
    ],
    exclude_directories = 1
    ),
  pch = pch_with_name_hint(
    "PINCache",
    [
      "Source/**/*.pch"
