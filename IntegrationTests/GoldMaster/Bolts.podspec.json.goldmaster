        exclude_directories = 1
        ),
      "//conditions:default": glob(
        [
          "Bolts/Common/*.m"
        ],
        exclude = [
          "Bolts/iOS/**/*.m"
        ],
        exclude_directories = 1
        ),
      ":watchosCase": glob(
        [
          "Bolts/Common/*.m"
        ],
        exclude_directories = 1
        ),
      ":tvosCase": glob(
        [
          "Bolts/Common/*.m"
        ],
        exclude_directories = 1
        )
    }
    ),
  hdrs = select(
    {
      ":osxCase": glob(
        [
          "Bolts/Common/*.h",
          "pod_support/Headers/Public/**/*.h"
        ],
        exclude_directories = 1
        ),
      "//conditions:default": glob(
        [
          "Bolts/Common/*.h",
          "pod_support/Headers/Public/**/*.h"
        ],
        exclude_directories = 1
        ),
      ":watchosCase": glob(
        [
          "Bolts/Common/*.h",
          "pod_support/Headers/Public/**/*.h"
        ],
        exclude_directories = 1
        ),
      ":tvosCase": glob(
        [
          "Bolts/Common/*.h",
          "pod_support/Headers/Public/**/*.h"
        ],
        exclude_directories = 1
        )
    }
    ),
  pch = pch_with_name_hint(
    "Bolts",
    [
      "Bolts/**/*.pch"
    ]
    ),
  includes = [
    "pod_support/Headers/Public/",
    "pod_support/Headers/Public/Bolts/"
  ],
  copts = [

  ] + select(
    {
      "//conditions:default": [
        "-DPOD_CONFIGURATION_RELEASE=0"
      ],
      ":release": [
        "-DPOD_CONFIGURATION_RELEASE=1",
        "-DNS_BLOCK_ASSERTIONS=1"
      ]
    }
    ),
  visibility = [
    "//visibility:public"
  ]
  )
acknowledged_target(
  name = "Bolts_Tasks_acknowledgement",
  deps = [

